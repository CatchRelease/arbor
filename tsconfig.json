{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "lib": ["dom", "es2017"],
    "noEmit": true,
    "outDir": "dist",
    "types": ["@emotion/jest", "jest", "jest-enzyme", "jest-plugin-context"]
  },
  "include": ["jest.setup.ts", "src/**/*.ts", "src/**/*.tsx"]
}
