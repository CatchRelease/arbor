{
  "presets": [
    "@babel/preset-env",
    [
      "@babel/preset-react",
      { "runtime": "automatic", "importSource": "@emotion/react" }
    ]
  ],
  "env": {
    "production": {
      "plugins": [
        ["@emotion", { "hoist": true }],
        ["@babel/plugin-proposal-class-properties", { "loose": true }]
      ]
    },
    "development": {
      "plugins": [
        ["@emotion", { "sourceMap": true, "autoLabel": "always" }],
        ["@babel/plugin-proposal-class-properties", { "loose": true }]
      ]
    },
    "test": {
      "plugins": [
        ["@emotion", { "sourceMap": false, "autoLabel": "always" }],
        ["@babel/plugin-proposal-class-properties", { "loose": true }]
      ]
    }
  }
}
