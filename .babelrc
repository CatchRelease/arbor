{
  "presets": ["@babel/preset-env", "@babel/preset-react"],
  "env": {
    "production": {
      "plugins": [
        ["emotion", { "hoist": true }],
        ["@babel/plugin-proposal-class-properties", { "loose": true }]
      ]
    },
    "development": {
      "plugins": [
        ["emotion", { "sourceMap": true, "autoLabel": true }],
        ["@babel/plugin-proposal-class-properties", { "loose": true }]
      ]
    },
    "test": {
      "plugins": [
        ["emotion", { "sourceMap": true, "autoLabel": true }],
        ["@babel/plugin-proposal-class-properties", { "loose": true }]
      ]
    }
  }
}
